<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Standard view -->
    <record id="view_account_move_due_dates_form" model="ir.ui.view">
        <field name="name">view.account.move.due.dates.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet/notebook/page[1]" position="after">
                <page string="Scadenze">
                    <field name="duedate_line_ids">
                        <!--
                            NB: editable="top" let's the user modify the item directly from the row, without
                                opening a new form dialog
                        -->
                        <tree editable="top">
                            <field name="due_date"/>
                            <!-- <field name="due_dc"/>-->
                            <field name="payment_method_id"/>
                            <field name="due_amount"/>
                            <field name="move_line_id" groups="base.group_no_one"/> <!-- Shown only in debug mode -->
                        </tree>
                    </field>
                </page>

            </xpath>

        </field>
    </record>

</odoo>

