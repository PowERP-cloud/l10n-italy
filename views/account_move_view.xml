<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_account_move_form_fy" model="ir.ui.view">
        <field name="name">account.account.move.form.fy</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <field name="date" position="attributes">
                <!-- Alter the field label -->
                <attribute name="string">Data registrazione</attribute>
            </field>

            <xpath expr="//field[@name='date']" position="before">
                <field name="fiscalyear_id"/>
                <field name="type_13" attrs="{'readonly': [('lines_count', '>', 0)]}"  force_save="1"/>
                <!--
                Since this module depends on account_move_entry_dates which adds
                the field 'journal_type' to te view, the 'journal_type' field
                can be safely used in attrs definition
                -->
                <field
                    name="invoice_date_13"
                    attrs="{'required': [('type_13', 'in', ['out_invoice', 'in_invoice', 'out_refund', 'in_refund'])]}"
                />
                <field name="lines_count" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='date']" position="after">
                <field name="date_apply_vat"/>
                <field name="date_apply_balance"/>
            </xpath>

            <!--
            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="domain">[('type', '=', journal_type)]</attribute>
            </xpath>
            -->

            <xpath expr="//field[@name='company_id']" position="after">
                <field name="type_13" invisible="1" />
                <field
                    name="payment_term_id_13"
                    attrs="{
                        'invisible': [('type_13', 'not in', ['out_invoice', 'out_refund', 'in_invoice','in_refund'])],
                        'readonly': [('state', 'not in', ['draft',])]
                    }"
                />
            </xpath>

        </field>
    </record>

</odoo>

