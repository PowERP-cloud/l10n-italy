<odoo>

    <record id="wizard_payment_order_confirm" model="ir.ui.view">
        <field name="name">wizard.payment.order.confirm.form</field>
        <field name="model">wizard.payment.order.confirm</field>
        <field name="arch"  type="xml">
            <form string="Conferma Pgamento">
                <group>
                    <field name="account_expense" />
                    <field name="amount_expense"
                           attrs="{'invisible':[('account_expense','=', False)]}"/>
                </group>

                <footer>
                    <button type="object" name="confirm"
                            string="Conferma"
                            class="oe_highlight"/>
                    <button special="cancel" string="Annulla" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_confirm_payment_order" model="ir.actions.act_window">
        <field name="name">Genera distinta di conferma</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">wizard.payment.order.confirm</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_payment_order_confirm"/>
        <field name="target">new</field>
        <field name="binding_model_id" ref="account.model_account_move_line" />
    </record>

</odoo>